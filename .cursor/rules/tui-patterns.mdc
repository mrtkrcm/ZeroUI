// Better approach with channels
func (m Model) loadData() tea.Cmd {
    return func() tea.Msg {
        ch := make(chan tea.Msg, 1)

        go func() {
            defer close(ch)

            items, err := m.fetchItems()
            if err != nil {
                ch <- errMsg{err: err, context: "loadData"}
                return
            }

            ch <- dataLoadedMsg{items: items, timestamp: time.Now()}
        }()

        return func() tea.Msg {
            select {
            case msg := <-ch:
                return msg
            default:
                return nil
            }
        }
    }
}
