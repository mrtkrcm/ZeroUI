func NewModel(options ...Option) Model {
    m := Model{
        // Default values
        cursor: 0,
        loading: true,
        items: make([]Item, 0),
    }

    // Apply options
    for _, option := range options {
        option(&m)
    }

    // Validate initial state
    if err := m.validateState(); err != nil {
        m.err = err
    }

    return m
}

