#!/bin/bash
# Test stub for Neovim
# This is used by tests to avoid dependency on the actual nvim binary

if [[ "$1" == "--help" || "$1" == "-h" ]]; then
    echo "nvim (test stub) - Hyperextensible Vim-based text editor"
    echo "Usage: nvim [files...]"
    echo "This is a test stub and does not provide full functionality."
    exit 0
fi

if [[ "$1" == "--version" || "$1" == "-V" ]]; then
    echo "NVIM v0.9.0 (test-stub)"
    exit 0
fi

echo "nvim test stub executed successfully"
exit 0