#!/bin/bash
# Test stub for Zed code editor
# This is used by tests to avoid dependency on the actual zed binary

if [[ "$1" == "--help" || "$1" == "-h" ]]; then
    echo "zed (test stub) - A high-performance, multiplayer code editor"
    echo "Usage: zed [files...]"
    echo "This is a test stub and does not provide full functionality."
    exit 0
fi

if [[ "$1" == "--version" || "$1" == "-V" ]]; then
    echo "zed 0.1.0 (test-stub)"
    exit 0
fi

echo "zed test stub executed successfully"
exit 0