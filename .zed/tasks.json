[
  {
    "label": "Build ZeroUI",
    "command": "make",
    "args": ["build"],
    "env": {
      "CGO_ENABLED": "0"
    },
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run Tests",
    "command": "make",
    "args": ["test"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run Tests (Verbose)",
    "command": "make",
    "args": ["test-verbose"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run Linter",
    "command": "make",
    "args": ["lint"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Security Check",
    "command": "make",
    "args": ["security"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Format Code",
    "command": "make",
    "args": ["fmt"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "no_focus"
  },
  {
    "label": "Start Development Server",
    "command": "make",
    "args": ["air"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Install Dev Dependencies",
    "command": "make",
    "args": ["dev-deps"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Update Dependencies",
    "command": "./scripts/maintenance/update-dependencies.sh",
    "args": [],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run Benchmarks",
    "command": "make",
    "args": ["benchmark"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Check Vulnerabilities",
    "command": "make",
    "args": ["vuln"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "All Quality Checks",
    "command": "make",
    "args": ["check"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Clean Build Artifacts",
    "command": "make",
    "args": ["clean"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "no_focus"
  },
  {
    "label": "Run ZeroUI",
    "command": "make",
    "args": ["run"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Test Current Package",
    "command": "go",
    "args": ["test", "-v", "-race", "./$ZED_RELATIVE_FILE_DIR"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always"
  },
  {
    "label": "Benchmark Current Package",
    "command": "go",
    "args": ["test", "-bench=.", "-benchmem", "./$ZED_RELATIVE_FILE_DIR"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always"
  }
]
