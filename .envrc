# direnv configuration for ZeroUI development
# Install direnv: https://direnv.net/docs/installation.html

# Go environment
export GO111MODULE=on
export CGO_ENABLED=1
# Use system defaults for GOOS and GOARCH
# export GOOS=darwin
# export GOARCH=arm64

# Development tools
export PATH="$(go env GOPATH)/bin:$PATH"

# ZeroUI specific environment
export ZEROUI_DEV=true
export ZEROUI_LOG_LEVEL=debug
export ZEROUI_CONFIG_DIR="./configs"

# Build optimization for development
export GOGC=off
export GOCACHE="$(pwd)/.cache/go-build"

# Database connection for testing (if applicable)
# export ZEROUI_DB_URL="sqlite://./test.db"

echo "ZeroUI development environment loaded"
echo "Go version: $(go version)"
echo "GOPATH: $(go env GOPATH)"
echo "GOCACHE: $GOCACHE"